<div class="content-form-password">
  <div class="form">
    <h2>Mot de passe oublié ?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, placeholder: "Tapez l'email correspondant à votre compte" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Réinitialisation de mon mot de passe", class: "btn btn-success" %>
      </div>
    <% end %>

    <div class="form-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
