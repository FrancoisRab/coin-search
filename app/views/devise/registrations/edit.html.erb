
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="content-form">
        <div class="form">
          <h2>Edition du compte</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :name, required: true, autofocus: true, label: 'Nom' %>
              <%= f.input :email, required: true %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>

              <%= f.input :password, autocomplete: "off", label: 'Nouveau mot de passe', hint: "Laissez ce champ vide si vous ne souhaitez pas modifier votre mot de passe.", required: false %>
              <%= f.input :password_confirmation, label: 'Confirmez votre mot de passe', required: false %>
              <%= f.input :current_password, label: 'Mot de passe actuel', hint: "Nous avons besoin de votre mot de passe actuel afin de confirmer le changement.", required: true %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Mettre Ã  jour" %>
            </div>
          <% end %>

          <h3>Suprimer mon compte</h3>

          <p><%= link_to "Suppression du compte", registration_path(resource_name), data: { confirm: "Es-tu certain de vouloir faire un tel acte ?" }, method: :delete %></p>

          <%= link_to "Retour", :back %>
        </div>
      </div>
    </div>
  </div>
</div>

