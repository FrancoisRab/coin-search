<h1>Hello <%= current_user.email %></h1>

<div class="container">
  <div class="btn-add">
    <%= link_to 'Ajouter mon commerce', new_store_path, class: "btn btn-success" %>
  </div>

  <div class="list-stores">
    <% @magasins.each do |store| %>
        <h4>
          <%= link_to store.name, store_path(store), target: "_blank" %>
          <% if policy(store).update? %>
            <%= link_to edit_store_path(store) do %>
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            <% end %>
          <% end %>
          <% if policy(store).destroy? %>
            <%= link_to store_path(store),
                  method: :delete,
                  data: { confirm: "Veux-tu vraiment supprimer ce magasin ?" } do %>
              <i class="fa fa-trash-o" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </h4>
    <% end %>
  </div>
</div>
