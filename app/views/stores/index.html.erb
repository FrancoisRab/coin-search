<div class="page-search">
  <div class="navbar-search text-center">
    <ul class="list-btn" id="list-inline-override">
      <li id="btn-bars"><p class="list-hover">Bars</p></li>
      <li class="btn-list"><p class="list-hover">Restaurants</p></li>
      <li class="btn-list"><p class="list-hover">Hotels</p></li>
      <li class="btn-list"><p class="list-hover">Coworking</p></li>
      <li class="btn-list"><p class="list-hover">Soins</p></li>
      <li class="btn-list"><p class="list-hover">Autres</p></li>
    </ul>
  </div>
  <div class="header-search">
    <div class="search-bar">
      <div class="search-icon">
        <i class="fa fa-search" aria-hidden="true"></i>
      </div>
      <div class="search-input">
        <%= form_tag(search_index_path, method: "get") do %>
          <%= text_field_tag :query, nil, placeholder: 'Adresse, bar, restaurantâ€¦', class: "input-search", id: "store_address" %>
      </div>
      <div class="search-btn">
          <%= submit_tag "Chercher", class: "btn-search" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container cards-search">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div id="stores">
          <% @stores.each do |store| %>
            <%= link_to store_path(store) do %>
              <div class="product">
                <%= cl_image_tag store.photo, height: 100, width: 200, crop: :fill, class: "product-image hidden-xs" %>
                <div class='product-body'>
                  <h3><%= link_to store.name, store_path(store) %></h3>
                  <p><%= store.category %> | <%= store.crypto %></p>
                </div>
                <ul class="list-inline product-controls hidden-sm hidden-xs">
                  <li><%= store.address %></li>
                  <li><%= store.postcode %></li>
                </ul>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
